<body class="login">

<!-- Main Container Fluid -->
<div class="container-fluid">

  <!-- Content -->
  <div id="content">

    <!-- Top navbar (note: add class "navbar-hidden" to close the navbar by default) -->
    <div class="navbar main hidden-print">

      <div class="secondary">
        <div class="container-960">

          <!-- Brand -->
          <a href="<%= $context %>admin" class="appbrand pull-left">ThunderCat</a>

          <ul class="topnav pull-right">


          </ul>
          <div class="clearfix"></div>

        </div>
      </div>

      <div class="container-960">

        <ul class="topnav pull-left">

        </ul>

        <!-- Top Menu Right -->
        <ul class="topnav pull-right border-none hidden-tablet">


        </ul>
        <div class="clearfix"></div>
        <!-- // Top Menu Right END -->

      </div>

    </div>
    <!-- Top navbar END --><!-- Wrapper -->
    <div id="login">

      <div class="container">

        <div class="wrapper">

          <h1 class="glyphicons unlock">Sign in <i></i></h1>

          <!-- Box -->
          <div class="widget widget-heading-simple widget-body-gray">

            <div class="widget-body">

              <!-- Form -->
              <form method="post" action="<%= $context %>login">
                <label>Username</label>
                <input type="text" class="input-block-level" name="username" placeholder="Your Username"/>
                <label>Password</label>
                <input type="password" class="input-block-level margin-none" name="password" placeholder="Your Password" />
                <div class="separator bottom"></div>
                <div class="row-fluid">
                  <div class="span4 center">
                    <button class="btn btn-block btn-inverse" type="submit">Sign in</button>
                  </div>
                </div>
              </form>
              <!-- // Form END -->

            </div>
          </div>
          <!-- // Box END -->

        </div>

      </div>

    </div>
    <!-- // Wrapper END -->
  </div>
  <!-- // Content END -->

  <div id="footer" class="hidden-print">



        <!--  Copyright Line -->
        <div style="text-align:center;">&copy; 2013 - <a href="http://www.masterthought.net">MasterThought</a> - All Rights Reserved.
          <a href="https://github.com/masterthought/thundercat" target="_blank">ThunderCat</a> - Current version: v0.0.1
        </div>
        <!--  End Copyright Line -->

    </div>

  </div>
  <!-- // Footer END -->

</div>
<!-- // Main Container Fluid END -->


<!-- JQuery -->
<script src="<%= $context %>javascripts/jquery-1.10.1.min.js"></script>
